@model bacit_dotnet.MVC.Models.Teams

@* ### Delete for Team ### *@

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4 bg-white">
        <div class="row pb-2">
            <h3 class="text-dark">Slett team</h3>
            <hr />
        </div>
        @*
            This line of code will show a summary of all errors at the top of the page.
            <div asp-validation-summary="All" class="text-danger"></div>*@
        <div class="mb-3">
            <label asp-for="TeamName">Teamnavn</label>
            <input asp-for="TeamName" disabled="" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="UserId">Teamleder</label>
            <input value="@string.Concat(Model.User.FirstName)" disabled="" class="form-control" />
        </div>
        <div class="d-grid pb-3">
            <div class="btn-group" role="group">
                <button id="submitBtn" type="submit" class="btn btn-dark btn-lg btn-outline-dark text-white extra-button-style">Slett</button>
                <a asp-controller="Team" asp-action="Index" class="btn btn-light btn-outline-dark btn-lg extra-button-style">Tilbake til listen</a>
            </div>
        </div>
    </div>
</form>

<!--This script makes sure that the validation process is done on client-side instead of server-side-->
@section Scripts{

    <partial name="_ValidationScriptsPartial" />
}