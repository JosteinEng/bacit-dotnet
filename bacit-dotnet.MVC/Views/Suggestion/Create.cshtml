@using Microsoft.AspNetCore.Mvc.TagHelpers
@model bacit_dotnet.MVC.ViewModels.Suggestions.CreateSuggestionViewModel

<script src="~/js/createSuggestion.js"></script>

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create new Suggestion</h2>
            <hr />
        </div>
        @*
        This line of code will show a summary of all errors at the top of the page.
        <div asp-validation-summary="All" class="text-danger"></div>*@
        <div class="mb-3">
            <label asp-for="@Model.Suggestion.EmployeeId">Ansatt ID</label>
            <input asp-for="@Model.Suggestion.EmployeeId" class="form-control" />
            <span asp-validation-for="@Model.Suggestion.EmployeeId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Suggestion.Title">Tittel</label>
            <input asp-for="@Model.Suggestion.Title" class="form-control" />
            <span asp-validation-for="@Model.Suggestion.Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Suggestion.Description">Beskrivelse</label>
            <input asp-for="@Model.Suggestion.Description" class="form-control" />
            <span asp-validation-for="@Model.Suggestion.Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Suggestion.Deadline">Tidsfrist</label>
            <input asp-for="@Model.Suggestion.Deadline" type="date" min="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" />
            <span asp-validation-for="@Model.Suggestion.Deadline" class="text-danger"></span>
        </div>

        <!-- Image -->  
        <div class="mb-3">
            <label for="Attachments" class="form-label">Last opp bilde</label>
            <input id="imageInput" class="form-control pt-1" name="@(nameof(Model.Attachments))" type="file" accept="*/image" size="1" style="cursor: pointer" value="Choose file" aria-describedby="imageFileHelp" />  
            <small id="imageFileHelp" class="form-text text-muted">Velg et bilde</small>  

            <!-- Image preview field -->  
@*            <div id="imageContainer" class="col-10 mx-auto">  
                <img id="imagePreview" class="mx-auto"/>  
            </div> *@
        </div>

        <br/>

        <button type="submit" class="btn btn-primary" style="width: 150px">Create</button>
        <a asp-controller="Suggestion" asp-action="Index" class="btn btn-secondary" style="width: 150px">
            Back to list
        </a>
    </div>
</form>


<!--This script makes sure that the validation process is done on client-side instead of server-side-->
@section Scripts{

    <partial name="_ValidationScriptsPartial" />
}


