    <div class="d-flex justify-content-center">
        <div class="card col-sm-3 col-md-6">
            <div class="card-header">
                <h5>Lag nytt forslag</h5>
            </div>
            <div class="card-body">
                <form action="" method="get">
                    <div class="mb-3">
                        <label class="form-label">AnsattNummer</label>
                        <input type="text" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Team</label>
                        <input type="text" class="form-control"/>
                    </div>
	                <div class="mb-3">
						<label class="form-label">Velg Kategori</label>
						<select class="form-control">
							<option></option>
							<option>HMS</option>
							<option>Kvalitet</option>
							<option>Ledetid</option>
							<option>Kostnader</option>
							<option>Effektivisering</option>
