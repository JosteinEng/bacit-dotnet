							<option>Kommunikasjon</option>
							<option>5S</option>
							<option>Standardisering</option>
							<option>Flyt</option>
							<option>Visualisering</option>
							<option>Energi</option>
							<option>Bærekraft</option>
							<option>Industri 4.0</option>
						</select>
					</div>
                    <div class="mb-3">
                        <label class="form-label">Overskrift</label>
                        <input type="text" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Beskrivelse</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="4"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="formFile" class="form-label">Last opp bilde</label>
                        <input class="form-control" type="file" id="formFile">
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-primary">Lagre</button>
                    </div>
                </form>
            </div>
            <div class="card-footer">
            </div>
        </div>
    </div>
</div>
