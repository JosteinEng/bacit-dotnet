@model bacit_dotnet.MVC.ViewModels.Suggestions.IndexViewModel

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h5>Lag nytt forslag</h5>
            </div>
            <div class="card-body">
                <form action="/Suggestion/Suggestion" method="get">
                    <div class="mb-3">
                        <label class="form-label">AnsattNummer</label>
                        <input type="text" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Team</label>
                        <input type="text" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Kategori</label>
                        <input type="text" class="form-control"/>
                    </div>
                    <fieldset>Velg Kategori <select id="Kategori" name="Kategori">

                            <option value=""></option>

                            <option value="0">Kategori</option>

                            <option value="1">Kategori1</option>

