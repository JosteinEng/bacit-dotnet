@using Microsoft.CodeAnalysis.VisualBasic.Syntax
@model bacit_dotnet.MVC.ViewModels.Suggestions.SuggestionsViewModel
@{
	ViewData["Title"] = "Index";
}
<h1>Mine forslag</h1>

<hr/>

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">List of suggestions in the system</h2>
		</div>
	</div>
</div>
<br /><br />
<table class="table table-bordered table-striped" style="width: 100%">
	<thead>
	<tr>
		<th>
			Title:
		</th>
		<th>
			Description:
		</th>
		<th>
			Deadline:
		</th>
		<th>
			Date created:
		</th>
		<th>
			Attachment:
		</th>
	</tr>
	</thead>
	<tbody>
	@foreach (var objSuggestion in Model.Suggestions)
	{
		<tr>
			<td width="20%">
				@objSuggestion.Title
			</td>
			<td width="20%">
				@objSuggestion.Description
			</td>
			<td width="20%">
				@objSuggestion.Deadline
			</td>
			<td width="20%">
				@objSuggestion.CreatedDate
			</td>
			<td width="20%">
				@if (objSuggestion.Attachments == null)
				{
					@:<p>No attachment</p>
				}
				else
				{
				@objSuggestion.Attachments
				}
			</td>

		</tr>
	}
	</tbody>
</table>