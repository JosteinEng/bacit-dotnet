@using bacit_dotnet.MVC.Models.Account
@model RegisterViewModel

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - bacit_dotnet.MVC</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Spartan">
</head>

@{
    ViewData["Title"] = "Register";
}

    
            <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form" enctype="multipart/form-data">
	            <div class="border bg-white p-3 mt-4">
		            <div class="row pb-2">
			            <h3 class="text-dark">Legg til ny bruker</h3>
			            <hr />
			            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
			            <div class="form-group">
				            <label asp-for="Email" class="control-label pt-3">Ansattnummer</label>
				            <div class="text-center d-flex justify-content-center">
					            <input asp-for="Email" type="text" oninput="this.value = this.value.replace(/[^0-9.]/g, ''); this.value = this.value.replace(/(\..*)\./g, '$1');" class="form-control" />
				            </div>
				            <span asp-validation-for="Email" class="text-danger"></span>
			            </div>
			            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
			            <div class="form-group">
				            <label asp-for="FirstName" class="control-label pt-3">Fornavn</label>
				            <div class="text-center d-flex justify-content-center">
					            <input asp-for="FirstName" type="text" class="form-control" />
				            </div>
				            <span asp-validation-for="FirstName" class="text-danger"></span>
			            </div>
		            </div>
		            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
		            <div class="form-group">
			<label asp-for="LastName" class="control-label pt-3">Etternavn</label>
			            <div class="text-center d-flex justify-content-center">
				            <input asp-for="LastName" type="text" class="form-control" />
			            </div>
			            <span asp-validation-for="LastName" class="text-danger"></span>
		            </div>
		            <div class="form-group">
			<label asp-for="Password" class="control-label pt-3">Passord</label>
			            <div class="text-center d-flex justify-content-center">
				            <input asp-for="Password" class="form-control" />
			            </div>
			            <span asp-validation-for="Password" class="text-danger"></span>
		            </div>
		            <div class="form-group">
			<label asp-for="ConfirmPassword" class="control-label pt-3">Bekreft passord</label>
			            <div class="text-center d-flex justify-content-center">
				            <input asp-for="ConfirmPassword" class="form-control" />
			            </div>
			            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
		            </div>

		            <div class="d-grid pb-3 pt-5">
			            <div class="btn-group" role="group">
				            <button id="submitBtn" type="submit" class="btn btn-dark btn-lg btn-outline-dark text-white extra-button-style">Registrer</button>
				            <a asp-controller="Users" asp-action="Index" class="btn btn-light btn-outline-dark btn-lg extra-button-style">Tilbake</a>
			            </div>
		            </div>
	            </div>
	            </form>

            @section Scripts {
                @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
            }
